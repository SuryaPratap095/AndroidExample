<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_btn1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="0"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_btn2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_btn3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="2"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_btn4"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_btn5"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="4"
            />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_btn6"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="5"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_btn7"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="6"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_btn8"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="7"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_btn9"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="8"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_btn10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="9"
                    />



                </LinearLayout>

    </LinearLayout>



</LinearLayout>
